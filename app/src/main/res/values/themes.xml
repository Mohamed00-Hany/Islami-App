<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamiApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/goldVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="no_bar" parent="Theme.IslamiApp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="fragment_text_style" parent="Theme.IslamiApp">
        <item name="color">@color/black</item>
    </style>
    <style name="fragment_view_style" parent="Theme.IslamiApp">
        <item name="android:background">@color/gold</item>
    </style>
    <style name="radio_button_style" parent="Theme.IslamiApp">
        <item name="android:backgroundTint">@color/gold</item>
    </style>
    <style name="sebha_Tasbeh_no" parent="Theme.IslamiApp">
        <item name="android:backgroundTint">@color/noTasbeh_color_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="sebha_button" parent="Theme.IslamiApp">
        <item name="android:backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="navigationBarStyle" parent="Theme.IslamiApp">
        <item name="android:background">@color/gold</item>
        <item name="itemIconTint">@color/item_selector_color</item>
        <item name="itemTextColor">@color/item_selector_color</item>
    </style>
    <style name="activity_details_background_style" parent="Theme.IslamiApp">
        <item name="android:backgroundTint">@color/activity_details_background_light_style</item>
    </style>
    <style name="activity_details_text_style" parent="Theme.IslamiApp">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="back_button" parent="Theme.IslamiApp">
        <item name="srcCompat">@drawable/ic_baseline_arrow_back_24</item>
    </style>
    <style name="dark_mode_button_style" parent="Theme.IslamiApp">
        <item name="icon">@drawable/dark_mode</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">30dp</item>
        <item name="android:background">@drawable/button_rounded3</item>
    </style>
</resources>